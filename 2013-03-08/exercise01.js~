function exercise01(n){
	var a = [];
	for (var i = 0; i <= n; i++) {
		a.push(i);      }
		return a;
	}; //a

	var fil = a.filter(function(item){ 
	    return item % 2===0;
	}) //b

	var mapp = fil.map(function(item){ //c
		return item= item*2;
	})

	var div = mapp.filter(function(item){
         return item % 4===0;
	}) //d

     div.reduce(function(a, b){
     	return a+b;
     }) //e


}
